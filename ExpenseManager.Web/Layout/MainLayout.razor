@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<!-- Header -->
<header class="d-flex justify-content-between align-items-center shadow">
    <div class="d-flex align-items-center">
        <button id="menu-toggle" class="btn me-3">
            <i class="bi bi-list"></i>
        </button>
        <div class="h4 m-0 text-white">
            <div class="logo"></div>
        </div>
    </div>
    <div class="dropdown">
        <div class="user-initial" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            VP
        </div>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="#">Change Password</a></li>
            <li><a class="dropdown-item" href="#">Logout</a></li>
        </ul>
    </div>
</header>

<!-- Sidebar -->
<nav id="sidebar" class="p-3">
    <NavMenu />
</nav>

<!-- Content Area -->
<main class="flex-grow-1 p-4">
    @Body
</main>

@code{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initialize");
        }
    }
}